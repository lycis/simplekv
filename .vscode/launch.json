{
    "configurations": [
      {
        "name": "(clang64) build and debug main.exe",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}\\dist\\main.exe",
        "args": ["-l", "DEBUG"],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "C:\\msys64\\clang64\\bin\\gdb.exe",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          },
          {
            "description": "Set Disassembly Flavor to Intel",
            "text": "-gdb-set disassembly-flavor intel",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "C/C++: clang64.exe build main"
      }
    ],
    "version": "2.0.0"
  }